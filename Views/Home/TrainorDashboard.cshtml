@await Html.PartialAsync("Navbar")

<div class="flex h-full w-full flex-col px-24 py-8">
    <label class="mt-5 text-xl font-bold text-[#152852]">
        Analytics
    </label>
    <div class="mt-5 flex flex-row justify-evenly gap-5">
        <div class="shadow-xy relative flex h-40 w-[400px] flex-col justify-center gap-1 rounded-xl px-8 py-6">
            <div class="flex flex-row items-center gap-12">
                <label class="text-6xl font-semibold">200</label>
                <div class="flex flex-row items-center justify-center gap-1 text-lg font-semibold">
                    <label class="text-green-500">+100</label>
                    <img class="h-[11px] w-[15px]" src="~/res/up_green.png" />
                </div>
            </div>
            <label class="text-xl">Total Number of Users</label>
            <svg class="absolute right-4 top-6" width="109" height="91" viewBox="0 0 109 91" fill="none" xmlns="http://www.w3.org/2000/svg">
