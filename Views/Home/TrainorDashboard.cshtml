            </svg>

        </div>
    </div>

    <label class="mt-8 text-xl font-bold text-[#152852]">
        On-Going Tasks
    </label>
    <!--Task Container-->
    <div class="mt-5 flex w-full justify-center">
        <div class="shadow-xy flex h-80 w-11/12 flex-col items-center justify-center rounded-xl">
            <img src="~/res/rocket.png" />
            <label class="text-xl">No Tasks Available</label>
            <label class="text-sm">Try Enabling Tasks or Adding Some For Employees To Take!</label>
        </div>
    </div>
</div>

@if (TempData["SuccessMsg"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["SuccessMsg"]');
    </script>
}