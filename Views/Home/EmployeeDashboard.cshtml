@await Html.PartialAsync("Navbar")

<div class="flex h-full w-full flex-col px-8 py-8 md:px-24">
    <label class="text-xl font-bold text-[#152852]">
        Your Tasks
    </label>
    <!--Task Container-->
    <div class="mt-5 flex w-full justify-center">
        <div class="shadow-xy flex h-80 w-full flex-col items-center justify-center rounded-xl md:w-11/12">
            <img src="~/res/rocket.png"/>
            <label class="text-xl">You've Completed All Your Tasks!</label>
            <label class="text-sm">Try Other Courses or Read Some Tips</label>
        </div>
    </div>

    <div class="mt-8 flex flex-col gap-4 md:flex-row">
        <!--Tips Container-->
        <div class="flex h-full w-full flex-col gap-4 md:w-9/12">
            <label class="text-xl font-bold text-[#152852]">
                Weekly Tips
            </label>
            <div class="flex flex-row flex-wrap justify-evenly gap-8">
                <!--Sample 1 Entry of Tip-->
                <div class="shadow-xy h-[275px] w-full rounded-xl md:w-[350px]">
                    <div class="flex h-[110px] w-full items-center justify-center rounded-t-xl bg-rose-300">
                        <img class="h-20 w-20" src="~/res/sample_tip.png" />    
                    </div>
                    <div class="flex flex-col px-6 py-4">
                        <label class="text-lg font-semibold">Test Yourself</label>
                        <label class="text-sm">How would you tell a skeptical team about a change mandated from above?</label>
                        <div class="mt-5 flex flex-row items-center gap-3">
                            <label class="rounded-lg bg-rose-300 px-6 py-1 text-sm text-white">Leading Change</label>
                            <label class="text-xs text-gray-400">~7 Minute Read</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Microcourses-->
        <div class="flex h-full w-full flex-col gap-4 md:w-3/12">
            <label class="text-xl font-bold text-[#152852]">
                Microcourses
            </label>
            <div class="shadow-xy flex h-32 w-full flex-col items-center justify-center gap-2 rounded-xl">
                <img src="~/res/sample_microcourse.png"/>
                <label class="font-semibold">Persuading Others</label>
            </div>
        </div>
    </div>

    <div class="mt-5 flex flex-col gap-2">
        <label class="text-xl font-bold text-[#152852]">Verified Trainors</label>
    </div>
    <div class="mt-5 flex flex-row flex-wrap justify-evenly gap-5">
        <!--Sample Trainor List-->
        <div class="shadow-xy relative flex h-[280px] w-full flex-col items-center gap-2 rounded-xl md:w-[300px]">
            <div class="h-1/3 w-full rounded-t-xl bg-gradient-to-b from-rose-300 to-rose-500"></div>
            <div class="absolute top-12 transform md:left-4 md:top-12 md:translate-x-2/3">
                <img src="~/res/SampleProfile.jpg" class="h-28 w-28 rounded-full" />
                <div class="flex flex-col items-center justify-center">
                    <label class="text-xl font-semibold text-black">EMP_kMacas</label>
                    <label class="text-lg font-semibold text-gray-300">Trainor</label>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMsg"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["SuccessMsg"]');
    </script>
}