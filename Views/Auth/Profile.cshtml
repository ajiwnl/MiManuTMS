@model TMS.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

@await Html.PartialAsync("Navbar")

<div class="flex h-full w-full flex-col md:flex-row">
    <!--The Side Container-->
    <div class="h-full w-full p-8 md:w-3/12">
        @await Html.PartialAsync("Sidebar")
    </div>

    <!--The Main Container-->
    <div class="flex h-full w-full flex-col gap-4 p-8 md:w-9/12">
        <div class="border-b-2 border-b-red-500 py-2">
            <label class="w-full text-xl font-semibold text-[#152852]">User Profile</label>
        </div>

        <div class="flex h-full w-full flex-col gap-12 md:flex-row">
            <div class="order-2 h-full w-full md:w-2/3 md:order-1">
                <div class="flex flex-col gap-5">

                    <div class="flex flex-col gap-1">
                        <label class="text-[#152852]">Username</label>
                        <label class="shadow-xy-subtle rounded-xl px-8 py-2 font-semibold text-[#152852]">@Model.Username</label>
                    </div>

                    <div class="flex flex-col gap-1">
                        <label class="text-[#152852]">First Name</label>
                        <label class="shadow-xy-subtle rounded-xl px-8 py-2 font-semibold text-[#152852]">@Model.FirstName</label>
                    </div>

                    <div class="flex flex-col gap-1">
                        <label>Last Name</label>
                        <label class="shadow-xy-subtle rounded-xl px-8 py-2 font-semibold text-[#152852]">@Model.LastName</label>
                    </div>

                    <div class="flex flex-col gap-1">
                        <label>Email</label>
                        <label class="shadow-xy-subtle rounded-xl px-8 py-2 font-semibold text-[#152852]">@Model.Email</label>
                    </div>

                    <div class="flex flex-col gap-1">
                        <label>Role</label>
                        <label class="shadow-xy-subtle rounded-xl px-8 py-2 font-semibold text-[#152852]">@Model.UserRole</label>
                    </div>

                    <div class="mt-3 flex flex-row items-center justify-center gap-5">
                        <a href="@Url.Action("EditProfile", "Auth")" class="rounded-xl bg-[#152852] px-6 py-2 text-white duration-300 hover:bg-[#0B162D]">Edit Profile</a>
                        <a href="@Url.Action("Logout", "Auth")" class="rounded-xl bg-[#DC3A3A] px-6 py-2 text-white duration-300 hover:bg-[#BE3030]">Logout</a>
                    </div>
                </div>
            </div>
            <div class="order-1 flex h-full w-full flex-col items-center justify-center gap-3 md:order-2 md:w-1/3">
                <label class="text-lg font-semibold text-[#152852]">Profile Picture</label>
                <a href="@Url.Action("ChangeProfilePicture", "Auth")">
                    <img src="@Model.UserImg" alt="Profile Picture" class="rounded-full" width="150" height="150">
                </a>
            </div>
        </div>
    </div>
</div>




