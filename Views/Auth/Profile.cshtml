@model TMS.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4>User Profile</h4>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="@Model.UserImg" alt="Profile Picture" class="rounded-circle" width="150" height="150">
            </div>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>First Name</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>@Model.Username</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>@Model.UserRole</td>
                    </tr>
                </tbody>
            </table>
            <div class="mt-3 text-center">
                <a href="@Url.Action("EditProfile", "Auth")" class="btn btn-warning">Edit Profile</a>
                <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>
